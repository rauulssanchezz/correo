<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio2">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu correo"
        android:inputType="textEmailAddress"
        android:autoLink="email"
        android:linksClickable="true"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu telefono"
        android:inputType="phone"
        android:autoLink="phone"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        />
    <EditText
        android:id="@+id/etWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu web"
        android:inputType="textWebEditText"
        android:autoLink="web"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        />
    <Button
        android:id="@+id/btEnviarEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Email"
        app:layout_constraintTop_toBottomOf="@+id/etWeb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/btEnviarPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Phone"
        app:layout_constraintTop_toBottomOf="@+id/btEnviarEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/btEnviarWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Web"
        app:layout_constraintTop_toBottomOf="@+id/btEnviarPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>